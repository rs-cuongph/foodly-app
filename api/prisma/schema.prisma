enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PROCESSING
  INIT
  CANCELED
  COMPLETED
}

enum TransactionStatus {
  INIT
  PROCESSING
  CANCELED
  COMPLETED
}

enum ShareScope {
  PUBLIC
  PRIVATE
}

enum RequestAddCoinStatus {
  PROCESSING
  INIT
  CANCELED
  COMPLETED
}

enum PaymentHistoryStatus {
  PROCESSING
  INIT
  CANCELED
  COMPLETED
}

enum GroupType {
  MANUAL
  AUTO
}
